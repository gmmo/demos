<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/option_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/row_control_margin_size"
        android:text="@string/app_name"
        android:textSize="@dimen/row_control_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/option_sub_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/option_title_id"
        android:layout_alignEnd="@+id/option_title_id"
        android:text="@string/app_name"
        android:textSize="@dimen/row_control_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/option_sub_title_id"
        android:layout_marginTop="@dimen/row_control_margin_size"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
