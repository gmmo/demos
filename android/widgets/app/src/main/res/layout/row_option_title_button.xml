<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/option_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/row_control_margin_size"
        android:text="@string/app_name"
        android:textSize="@dimen/row_control_text_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/option_button_id"
        android:layout_width="@dimen/row_control_button_size"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/row_control_margin_size"
        android:background="@drawable/action_btn_green"
        android:clickable="true"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/row_control_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/option_button_id"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
