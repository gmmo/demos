<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/wall_paper"
    android:gravity="center"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/custom_dialog_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/action_btn_green"
        android:padding="20dp"
        android:text="@string/custom_dialog"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/row_control_text_size" />

    <Button
        android:id="@+id/custom_controls_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/action_btn_green"
        android:padding="20dp"
        android:text="@string/android_controls"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/row_control_text_size" />


    <Button
        android:visibility="gone"
        android:id="@+id/test_activity_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/action_btn_green"
        android:padding="20dp"
        android:text="@string/test_activity"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/row_control_text_size" />

</LinearLayout>