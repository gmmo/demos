<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/custom_dialog_main_container_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="6dp"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/custom_dialog_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_title"
            android:padding="6dp"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/custom_dialog_query_message_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:lineSpacingExtra="6dp"
            android:text="@string/app_name"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/custom_dialog_yes_no_button_container_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6dp">

            <Button
                android:id="@+id/demo_dialog_no_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/action_btn_green"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="No"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/demo_dialog_yes_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/action_btn_red"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="Yes"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>