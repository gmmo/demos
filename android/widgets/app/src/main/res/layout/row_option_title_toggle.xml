<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/option_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/row_control_margin_size"
        android:text="@string/app_name"
        android:textSize="@dimen/row_control_text_size"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/option_toggle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/row_control_margin_size"
        android:checked="true"
        android:switchMinWidth="25dp"
        android:text=""
        android:textSize="@dimen/row_control_text_size"
        android:visibility="visible" />

    <View
        android:id="@+id/option_row_divider_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/option_toggle_id"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
